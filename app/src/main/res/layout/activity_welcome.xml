<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkwelcome"
    android:orientation="vertical"
    tools:context=".WelcomeActivity">

    <Button
        android:id="@+id/btnLoginPage"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="380dp"
        android:layout_marginEnd="59dp"
        android:background="@drawable/btnlogin"
        android:drawableLeft="@drawable/key"
        android:foregroundGravity="center_vertical|center_horizontal"
        android:freezesText="false"
        android:onClick="onLoginPageClick"
        android:paddingLeft="95dp"
        android:paddingRight="120dp"
        android:text="@string/login"
        android:textColor="@color/blue_p"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnRegisterPage"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="61dp"
        android:layout_marginBottom="208dp"
        android:background="@drawable/btnsignup"
        android:drawableLeft="@drawable/userplus"
        android:onClick="onRegisterPageClick"
        android:paddingLeft="90dp"
        android:paddingRight="100dp"
        android:text="@string/register"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</LinearLayout>